{
  "name": "root",
  "private": true,
  "scripts": {
    "start:app": "npx lerna run start --scope=@my-awesome-project/app --stream",
    "start:pages": "start-storybook -p 6006",
    "start:business": "npm run test:watch -- --roots=./packages/business",
    "commit": "git-cz",
    "init": "run-s init:dependencies build:business build:pages build:app",
    "init:dependencies": "npx lerna bootstrap",
    "build:business": "npx lerna run build --scope=@my-awesome-project/business --stream",
    "build:pages": "npx lerna run build --scope=@my-awesome-project/pages --stream",
    "build:app": "npx lerna run build --scope=@my-awesome-project/app --stream",
    "prebuild": "run-p lint test",
    "build": "lerna run build --stream",
    "lint": "run-p -c lint:*",
    "lint:js": "eslint 'packages/**/*.js{,x}'",
    "lint:css": "stylelint 'packages/**/*.js{,x}'",
    "fix": "npm run lint:js -- --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "prerelease": "npm run build",
    "release": "lerna publish",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.0-alpha.39",
    "@storybook/addon-links": "^5.1.0-alpha.39",
    "@storybook/addons": "^5.1.0-alpha.39",
    "@storybook/react": "^5.1.0-alpha.39",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.5",
    "commitizen": "^3.1.1",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {}
}
