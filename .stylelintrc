{
  "processors": ["stylelint-processor-styled-components"],
  "extends": ["stylelint-config-standard", "stylelint-config-styled-components"],
  "rules": {
    "selector-pseudo-element-colon-notation": [single, {
      "severity": "warning"
    }],
    "indentation": 2,
    "max-nesting-depth": [4, {
      "severity": "warning"
    }],
    "no-descending-specificity": [true, {
      "severity": "warning"
    }]
  }
}
